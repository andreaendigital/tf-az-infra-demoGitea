APP_NAME = Gitea: Git with a cup of tea
RUN_MODE = prod
RUN_USER = {{ gitea_user }}
WORK_PATH = {{ gitea_work_dir }}

[server]
DOMAIN           = {{ gitea_domain }}
HTTP_PORT        = {{ gitea_http_port }}
ROOT_URL         = {{ gitea_root_url }}
DISABLE_SSH      = false
SSH_DOMAIN       = {{ gitea_domain }}
SSH_PORT         = {{ gitea_ssh_port }}
SSH_LISTEN_PORT  = {{ gitea_ssh_port }}
OFFLINE_MODE     = false
APP_DATA_PATH    = {{ gitea_data_dir }}
LANDING_PAGE     = home
LFS_START_SERVER = true
LFS_JWT_SECRET   = {{ gitea_secret_key }}

[database]
DB_TYPE  = mysql
HOST     = {{ mysql_host }}:{{ mysql_port }}
NAME     = {{ mysql_database }}
USER     = {{ mysql_user }}
PASSWD   = {{ mysql_password }}
SSL_MODE = required
CHARSET  = utf8mb4
LOG_SQL  = false

[repository]
ROOT = {{ gitea_data_dir }}/gitea-repositories
SCRIPT_TYPE = bash
DEFAULT_BRANCH = main
DEFAULT_PRIVATE = last
MAX_CREATION_LIMIT = -1

[ui]
THEMES = gitea,arc-green
DEFAULT_THEME = gitea

[security]
INSTALL_LOCK                  = true
SECRET_KEY                    = {{ gitea_secret_key }}
INTERNAL_TOKEN                = {{ gitea_internal_token }}
PASSWORD_HASH_ALGO            = pbkdf2
MIN_PASSWORD_LENGTH           = 8
PASSWORD_COMPLEXITY           = lower,upper,digit
PASSWORD_CHECK_PWN            = true

[service]
DISABLE_REGISTRATION              = false
REQUIRE_SIGNIN_VIEW               = false
REGISTER_EMAIL_CONFIRM            = false
ENABLE_NOTIFY_MAIL                = false
ALLOW_ONLY_EXTERNAL_REGISTRATION  = false
ENABLE_CAPTCHA                    = false
DEFAULT_KEEP_EMAIL_PRIVATE        = false
DEFAULT_ALLOW_CREATE_ORGANIZATION = true
DEFAULT_ENABLE_TIMETRACKING       = true
NO_REPLY_ADDRESS                  = noreply.{{ gitea_domain }}

[mailer]
ENABLED = false

[session]
PROVIDER = file
PROVIDER_CONFIG = {{ gitea_data_dir }}/sessions

[log]
MODE      = console, file
LEVEL     = info
ROOT_PATH = {{ gitea_log_dir }}
ROUTER    = console

[log.console]
LEVEL = info

[log.file]
LEVEL = info

[oauth2]
JWT_SECRET = {{ gitea_secret_key }}

[cache]
ENABLED = true
ADAPTER = memory

[queue]
TYPE = level
DATADIR = {{ gitea_data_dir }}/queues
